
<div class="form-group">
    <label>
        Message:
        <input @bind="messageInput" size="50" />
    </label>
</div>

<MatButton @onclick="Send" disabled="@(!IsConnected)">Send public message</MatButton>
<MatButton @onclick="MessageGroup" disabled="@(!IsConnected)">Send group message</MatButton>

<hr />

@if (IsConnected)
{
    @if (isCodeCompiling)
    {
        <hr />
        <MatH4 Class="text-center" Style="color: blue">Executing...</MatH4>
        <SpinKitFadingCircle />
    }
    <DiffShare CodeSnippet="@Snippet" OnSendCode="SendSnippet" OnSubmitCode="SubmitCode"/>
}
else
{
    <MatH4 Class="text-center" Style="color: blue">Connecting...</MatH4>
    <SpinKitFadingCircle />
}
<hr>

<ul id="messagesList">
    @foreach (var message in messages)
    {
        <li>@message</li>
    }
</ul>